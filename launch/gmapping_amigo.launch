<launch>
  <arg name="namespace" default="amigo_1"/>
  <arg name="open_rviz" default="true"/>

  <param name="use_sim_time" value="false"/>

  <group ns="$(arg namespace)">
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
      <remap from="scan" to="/$(arg namespace)/scan"/>
      <param name="odom_frame" value="$(arg namespace)/odom"/>
      <param name="base_frame" value="$(arg namespace)/base_link"/>
      <param name="map_frame" value="$(arg namespace)/map"/>


      <param name="maxUrange" value="10."/>
      <param name="maxRange" value="12."/>
      <param name="linearUpdate" value="0.1"/>
      <param name="angularUpdate" value="0.01"/>
      <param name="temporalUpdate" value="-1"/> 
      <param name="particles" value="200"/>  
      <param name="minimumScore" value="300."/>
      <param name="delta" value="0.05" />
      <param name="map_update_interval" value="1." />
      <param name="srr" value="0.1" />
      <param name="srt" value="0.2" />
      <param name="str" value="0.1" />
      <param name="stt" value="0.2" />

      <param name="xmax" value="5" />
      <param name="xmin" value="-5" />
      <param name="ymax" value="5" />
      <param name="ymin" value="-5" />
    </node>
  </group>

  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find harmonic_map_multirobot_exploration)/rviz/amigo_slam.rviz"/>
  </group>

</launch>